<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:layoutDirection="rtl"
    tools:context=".Before_TestMezajQuestionFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_fg_before_test_mezaj_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_before_test_mezaj_question"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/toolbar_background"
            android:layoutDirection="rtl"
            app:elevation="0dp"
            app:title=" ">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                android:weightSum="4">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/title_imoteb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/dephiana_en"
                        android:text="@string/app_name"
                        android:textAllCaps="false"
                        android:textColor="@color/red"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/title_imoteb"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_splash_screen" />
                </RelativeLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar_fg_before_test_mezaj_question"
        android:background="@color/gray_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_light"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/main_background"
                    android:layoutDirection="rtl"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/red_light"
                        android:layoutDirection="rtl"
                        android:padding="5dp">

                        <TextView
                            style="@style/title_text_large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:text="@string/tavajjoh"
                            android:textColor="@color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:layoutDirection="rtl">

                        <TextView
                            android:id="@+id/txt_bardar"
                            style="@style/title_text_large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/text_bardar" />

                        <TextView
                            android:id="@+id/feshrKhoon"
                            style="@style/title_text_large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_bardar"
                            android:layout_marginTop="8dp"
                            android:text="@string/text_feshar_khoon" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/more_information_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layoutDirection="rtl"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/title_text_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/text_motaleye_bishtar_a" />

                        <TextView
                            style="@style/title_text_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/text_motaleye_bishtar_b" />
                        <!--                        <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="10dp"
                                                    android:orientation="horizontal">
                                                    <View
                                                        android:layout_width="15dp"
                                                        android:layout_height="15dp"
                                                        android:background="@drawable/ic_star"/>
                                                    <View
                                                        android:layout_width="15dp"
                                                        android:layout_height="15dp"
                                                        android:background="@drawable/ic_star"/>
                                                    <View
                                                        android:layout_width="15dp"
                                                        android:layout_height="15dp"
                                                        android:background="@drawable/ic_star"/>
                                                    <View
                                                        android:layout_width="15dp"
                                                        android:layout_height="15dp"
                                                        android:background="@drawable/ic_star"/>
                                                </LinearLayout>-->
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="8dp">

                        <TextView
                            android:id="@+id/motaleye_bishtar"
                            style="@style/title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/more"
                            android:textColor="@color/text_color_light" />

                        <Button
                            android:id="@+id/btn_bishtar_bekhanid"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_below="@+id/motaleye_bishtar"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/ic_arrow_down" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:layoutDirection="rtl">

                    <RelativeLayout
                        android:id="@+id/rl_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layoutDirection="rtl"
                        android:padding="8dp">

                        <TextView
                            style="@style/title_text_large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="@string/sen_input" />
                    </RelativeLayout>

                    <NumberPicker
                        android:id="@+id/numberPicker"
                        style="@style/title_text_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_age"
                        android:layout_centerHorizontal="true"
                        android:backgroundTint="@color/red"
                        android:backgroundTintMode="add"
                        android:divider="@color/blue_light_alpha" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/vaziyyat_tahhol"
                        style="@style/title_text_large"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="@string/vaziyat_tahhol" />

                    <RadioGroup
                        android:id="@+id/rg_vaziyat_tahhol"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/rb_mojarrad"
                            style="@style/title_text_medium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/mojarrad" />

                        <RadioButton
                            android:id="@+id/rb_motahhel"
                            style="@style/title_text_medium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/motaahel" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/white"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/jensiyyat"
                        style="@style/title_text_large"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="@string/jensiyyat" />

                    <RadioGroup
                        android:id="@+id/rg_jensiyyat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/rb_mard"
                            style="@style/title_text_medium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/mard" />

                        <RadioButton
                            android:id="@+id/rb_zan"
                            style="@style/title_text_medium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/zan" />
                    </RadioGroup>
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btn_marhaleye_baad"
        style="@style/title_text_large"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:background="@drawable/bg_button_blue"
        android:text="@string/marhaleye_baad"
        android:textColor="@color/white" />

</RelativeLayout>