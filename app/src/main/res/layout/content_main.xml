<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="@color/main_background">

    <TextView
        android:id="@+id/title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/iransans"
        android:textStyle="bold"
        android:text="@string/darbareye_mazaj"
        android:textSize="16sp"
        android:textColor="@color/text_color_titr"/>

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_1"
        android:fadingEdge="vertical"
        android:scrollIndicators="top">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/card_dam"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="6dp"
                    android:elevation="3dp"
                    android:background="@drawable/stroke_background_btn">
                    <ImageView
                        android:id="@+id/img_dam"
                        android:transitionName="imageTransition"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_spring"/>
                    <TextView
                        android:id="@+id/title_dam"
                        android:transitionName="titleTransition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_card_dam"
                        android:textSize="8sp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="6dp"
                    android:elevation="3dp"
                    android:background="@drawable/stroke_background_btn">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_summer"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تابستان صفرا گرم وخشک"
                        android:textSize="8sp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="6dp"
                    android:elevation="3dp"
                    android:background="@drawable/stroke_background_btn">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_automn"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="پاییز سودا سرد وخشک"
                        android:textSize="8sp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="6dp"
                    android:elevation="3dp"
                    android:background="@drawable/stroke_background_btn">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_snow"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="زمستان بلغم سرد وتر"
                        android:textSize="8sp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>

            </LinearLayout>

    </HorizontalScrollView>

    <Space
        android:id="@+id/space_2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/horizontal_scroll_view"/>

        <RelativeLayout
            android:id="@+id/card_bishtar_bedanid"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:elevation="3dp"
            android:layout_below="@+id/space_2"
            android:background="@drawable/purple_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="بیشتر بدانید ... "
                android:fontFamily="@font/iransans"
                android:textSize="20sp"
                android:textColor="@color/text_color_titr"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_mezaj"
                android:layout_margin="5dp"/>
        </RelativeLayout>

    <Button
        android:id="@+id/btn_start_TestMazaj"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_button"
        android:fontFamily="@font/iransans"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="@string/text_btn_start"
        android:layout_margin="15dp"
        android:textColor="@color/white" >

    </Button>

</RelativeLayout>
