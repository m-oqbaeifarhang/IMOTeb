<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="@color/main_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_mezaj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/iransans"
                    android:textStyle="bold"
                    android:text="@string/darbareye_mazaj"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_titr"/>

                <Space
                    android:id="@+id/space_1"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/title_mezaj"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_mezaj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/main_background"
                    android:layout_below="@id/space_1" />

                <Space
                    android:id="@+id/space_2"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/rv_mezaj"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_tabligh"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/space_2"
                    app:cardBackgroundColor="@color/white"
                    android:layout_margin="8dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/logo_daroo">
                        <TextView
                            style="@style/title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="اطلاعات دارویی"
                            android:layout_centerInParent="true"
                            android:textColor="@color/white" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/title_daroo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/card_tabligh"
                    android:fontFamily="@font/iransans"
                    android:textStyle="bold"
                    android:text="@string/foods"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_titr"/>

                <Space
                    android:id="@+id/space_3"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/title_daroo"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_daroo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/main_background"
                    android:layout_below="@id/space_3" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/btn_start_TestMazaj"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_button"
        android:fontFamily="@font/iransans"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="@string/text_btn_start"
        android:layout_margin="15dp"
        android:textColor="@color/white" >

    </Button>

</RelativeLayout>