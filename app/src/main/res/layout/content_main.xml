<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="@color/gray">

    <TextView
        android:id="@+id/title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/iransans"
        android:textStyle="bold"
        android:text="@string/darbareye_mazaj"
        android:textSize="16sp"
        android:textColor="@color/text_color_titr"/>

    <RelativeLayout
        android:id="@+id/rv_seasons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_1"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <RelativeLayout
                android:id="@+id/card_dam"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:elevation="7dp"
                android:background="@drawable/stroke_background_btn">
                <ImageView
                    android:id="@+id/img_dam"
                    android:transitionName="imageTransition"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_spring"/>
                <TextView
                    android:id="@+id/title_dam"
                    android:transitionName="titleTransition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_card_dam"
                    android:textSize="8sp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:elevation="7dp"
                android:background="@drawable/stroke_background_btn">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_summer"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تابستان صفرا گرم وخشک"
                    android:textSize="8sp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:elevation="7dp"
                android:background="@drawable/stroke_background_btn">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_automn"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="پاییز سودا سرد وخشک"
                    android:textSize="8sp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:elevation="7dp"
                android:background="@drawable/stroke_background_btn">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_snow"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="زمستان بلغم سرد وتر"
                    android:textSize="8sp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <Space
        android:id="@+id/space_2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/rv_seasons"/>

    <RelativeLayout
        android:id="@+id/txt_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/background_textview"
        android:layout_below="@id/space_2">
        <TextView
            android:id="@+id/tt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_color"
            android:fontFamily="@font/iransans"
            android:textSize="16sp"
            android:text="@string/help"/>
        <TextView
            android:id="@+id/tt2"
            android:layout_below="@+id/tt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textColor="@color/text_color"
            android:fontFamily="@font/iransans_l"
            android:textSize="16sp"
            android:text="@string/help"/>
        <TextView
            android:id="@+id/tt3"
            android:layout_below="@+id/tt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textColor="@color/text_color"
            android:fontFamily="@font/iransans_u"
            android:textSize="16sp"
            android:text="@string/help"/>
        <TextView
            android:id="@+id/tt4"
            android:layout_below="@+id/tt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textColor="@color/text_color"
            android:fontFamily="@font/iransans_m"
            android:textSize="16sp"
            android:text="@string/help"/>
        <TextView
            android:id="@+id/tt5"
            android:layout_below="@+id/tt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textColor="@color/text_color"
            android:fontFamily="@font/iransans_b"
            android:textSize="16sp"
            android:text="@string/help"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_start_TestMazaj"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shadow_background"
        android:fontFamily="@font/iransans"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="@string/text_btn_start"
        android:layout_margin="5dp"
        android:textColor="@color/white"/>

</RelativeLayout>
