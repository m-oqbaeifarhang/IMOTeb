<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <TextView
        android:id="@+id/title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/darbareye_mazaj"
        android:textSize="16sp"
        android:textColor="@color/text_color"/>
    <Space
        android:id="@+id/space_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/title_1"/>
    <RelativeLayout
        android:id="@+id/rv_seasons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/space_1"
        android:padding="5dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:elevation="3dp"
                android:background="@drawable/btn_spring">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_spring"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:elevation="3dp"
                android:background="@drawable/btn_summer">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_autumn"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:elevation="3dp"
                android:background="@drawable/btn_autumn">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_summer"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:elevation="3dp"
                android:background="@drawable/btn_snow">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_snow"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <Space
        android:id="@+id/space_2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/rv_seasons"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/space_2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            android:text="@string/help"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_start_TestMazaj"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/start"
        android:text="@string/text_btn_start"
        android:textStyle="bold"
        android:layout_margin="4dp"
        android:elevation="2dp"
        android:textColor="@color/white"
        android:textSize="20sp"/>

</RelativeLayout>