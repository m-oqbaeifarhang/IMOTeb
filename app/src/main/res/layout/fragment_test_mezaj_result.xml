<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:fitsSystemWindows="true"
    tools:context=".MezajsTest.Test_mezaj_resultFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_fragment_mezaj_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_test_mezaj_resultFragmaent"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbar_background"
            app:elevation="0dp"
            app:title=" "/>

    </com.google.android.material.appbar.AppBarLayout>

    <ProgressBar
        android:id="@+id/progressBar_fragment_test_mezaj_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:scaleY="1.5"
        android:progressTint="@color/blue_light"
        android:layout_below="@+id/app_bar_fragment_mezaj_result"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView_fragment_test_mezaj_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/progressBar_fragment_test_mezaj_result">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:orientation="vertical">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/main_background" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_content_main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="10dp"
                android:layoutDirection="rtl"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/corner_white_bg">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_result"
                        style="@style/title_text_large"
                        android:textSize="20sp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/natayejTablayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="0.5dp"
                android:elevation="6dp"
                android:background="@drawable/tablayout_bg"
                app:tabIndicatorColor="@color/blue_light"
                app:tabTextAppearance="@style/tab_text"/>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/natayejViewPager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingTop="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:elevation="6dp"
                android:background="@drawable/viewpager_bg"
                android:layoutDirection="rtl"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_ask_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/blue_light"
        app:rippleColor="@color/green"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp"
        app:elevation="6dp"
        app:srcCompat="@drawable/ic_share"/>

</RelativeLayout>