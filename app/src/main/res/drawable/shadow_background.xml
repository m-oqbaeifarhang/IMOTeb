<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="0.5dp" android:top="0.5dp">
                <shape>
                    <solid android:color="@color/blue_b" />
                    <corners android:radius="8dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="0dp" android:top="0dp">
                <shape>
                    <solid android:color="@color/blue_a" />
                    <corners android:radius="8dp"/>
                </shape>
            </item>
            <item android:bottom="0.5dp" android:right="0.5dp">
                <shape>
                    <solid android:color="@color/blue_c" />
                    <corners android:radius="8dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>