<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
        <!--status bar color-->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
<!--        <item name="statusBarScrim">@color/red</item>-->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:enforceStatusBarContrast">true</item>-->
<!--        <item name="statusBarBackground">@color/red</item>-->
    </style>

    <style name="IranSansFont">
        <item name="fontFamily">@font/iransans</item>
        <item name="android:textSize">14sp</item><!-- text size in menu-->
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_very_dark</item>
    </style>

</resources>
