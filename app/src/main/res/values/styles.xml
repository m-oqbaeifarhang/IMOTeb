<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
<!--    style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
        <!--status bar color-->
        <item name="android:statusBarColor">@color/main_background</item>
        <item name="android:windowLightStatusBar">true</item>
<!--        <item name="statusBarScrim">@color/red</item>-->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:enforceStatusBarContrast">true</item>-->
<!--        <item name="statusBarBackground">@color/red</item>-->
    </style>

    <style name="imotebTextStyle">
        <item name="fontFamily">@font/nasaliza</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_text_large">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_titr</item>
        <item name="fontFamily">@font/iransans</item>
    </style>

    <style name="title_text_medium">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_titr_dark</item>
        <item name="fontFamily">@font/iransans</item>
    </style>
    
    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <!--color of radio button-->
        <item name="colorAccent">@color/blue_dark</item>
        <!--defult color of radio button-->
        <item name="android:textColorPrimary">@color/gray_dark</item>
    </style>

    <style name="IranSansFont">
        <item name="fontFamily">@font/iransans</item>
        <item name="android:textSize">14sp</item><!-- text size in menu-->
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_titr_dark</item>
    </style>

    <style name="NumberPickerText_a">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#673AB7</item>
        <item name="android:color">#E91E63</item>
        <item name="android:colorActivatedHighlight">#FFC107</item>
    </style>

    <style name="NumberPickerInputAge">
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textColor">@color/text_color_titr</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="navigationTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/gray_very_light</item>
    </style>


</resources>
